@model Dain.Models.User

@{
    ViewBag.Title = "User";
    Layout = "~/Views/Shared/_Layout-Login.cshtml";
}


@using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-signin", id = "loginForm" }))
{
    @Html.AntiForgeryToken()
    <fieldset>

        <img class="mb-4" src="~/Content/Dain-Logo.png" alt="" width="150" height="185">
        <h1 class="h3 mb-3 font-weight-normal">Login</h1>

        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = Html.DisplayNameFor(u => u.Email), id = "EmailLogin",
            required = "true", type = "email" })


        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = Html.DisplayNameFor(u => u.Password),
            id = "PasswordLogin", required = "true" })

        <br />

        <a href="~/User/Register" class="btn btn-outline-dark">
            Register
        </a>

        <button class="btn btn-outline-dark" type="submit">
            Login
        </button>

        <p class="mt-5 mb-3 text-muted">&copy; 2018 - Dain</p>

    </fieldset>
}